extends ../layouts/file
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/file-upload/file-upload.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug


block variables
    - const title = "Главная"
block content
    section.reader
        .reader__preview
            #reader
        .results
            .results__title
                +icons('#ic_close',24)
                .section-h3 Результаты
            .tabs
                .tabs__tab Текущий
                .tabs__tab История
            .results__text Ничего не найдено...
        .reader__input.btn.btn-round
            +icons('#ic_upload',24)
            span Выбрать файл
            input(type="file" id="qr-input-file" accept="image/*")
block scripts
    script(src="js/main.js")
    script(src="js/camera.js")